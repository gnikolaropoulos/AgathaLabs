<Window x:Class="SoftwareBytes.AgathaWPFClient.MainWindow"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		Title="MainWindow" Height="350" Width="525">
	<Grid>
		<TextBox
			Height="23"
			HorizontalAlignment="Left"
			Margin="50,48,0,0"
			Name="m_message"
			x:FieldModifier="private"
			VerticalAlignment="Top"
			Width="120" />
		<Button
			Content="Send"
			Height="23"
			HorizontalAlignment="Left"
			Margin="50,77,0,0"
			Name="m_sendRequest"
			x:FieldModifier="private"
			VerticalAlignment="Top"
			Width="75"
			Click="HandleSendRequestClick" />
		<TextBlock
			Height="23"
			HorizontalAlignment="Left"
			Margin="80,165,0,0"
			Name="m_response"
			x:FieldModifier="private"
			Foreground="Red"
			VerticalAlignment="Top"
			Width="165" />
	</Grid>
</Window>
